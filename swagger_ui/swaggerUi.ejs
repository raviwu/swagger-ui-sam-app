<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title><%= appName %> Swagger UI</title>
    <link rel="shortcut icon" href="about:blank">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.19.4/swagger-ui.css" >
    <style>
      html {
        box-sizing: border-box;
        overflow: -moz-scrollbars-vertical;
        overflow-y: scroll;
      }

      *,
      *:before,
      *:after {
        box-sizing: inherit;
      }

      body {
        margin: 0;
        background: #fafafa;
      }

      .swagger-ui .topbar {
        background-color: #0f0f59;
      }

      .swagger-ui .topbar .download-url-wrapper .select-label span {
        color: #fafafa;
      }

      .swagger-ui .topbar .download-url-wrapper .select-label select {
        border: 0px;
      }

      .swagger-ui .topbar .topbar-wrapper > a > img {
          display: none;
      }
    </style>
  </head>

  <body>
    <div id="swagger-ui"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.19.4/swagger-ui-bundle.js"> </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/swagger-ui/3.19.4/swagger-ui-standalone-preset.js"> </script>

    <script>
        window.onload = function() {
          const ui = SwaggerUIBundle({
            urls: <%- JSON.stringify(swaggerSources) %>,
            dom_id: '#swagger-ui',
            deepLinking: true,
            presets: [
              SwaggerUIBundle.presets.apis,
              SwaggerUIStandalonePreset
            ],
            plugins: [
              SwaggerUIBundle.plugins.DownloadUrl
            ],
            layout: "StandaloneLayout",
            supportedSubmitMethods: []
          });

          window.ui = ui;
        }
    </script>
  </body>
</html>
